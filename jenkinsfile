pipeline {
    agent any

    stages {
        stage('Checkout Codebase') {
            steps {
                cleanWs()
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          userRemoteConfigs: [[
                              credentialsId: 'GitHubSShkey',
                              url: 'git@github.com:yosrayaakoubi/ConsoleLauncher.git'
                          ]]
                ])
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                sh '''
                    mkdir -p lib target

                    # Télécharger JUnit Console Standalone
                    curl -L -o lib/junit-platform-console-standalone-1.8.1.jar \
                    https://repo1.maven.org/maven2/org/junit/platform/junit-platform-console-standalone/1.8.1/junit-platform-console-standalone-1.8.1.jar

                    # Compiler tous les fichiers Java dans src/test/java
                    find src/test/java -name "*.java" > sources.txt
                    javac -d target -cp lib/junit-platform-console-standalone-1.8.1.jar @sources.txt
                '''
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh '''
                    # Exécuter tous les tests en scannant le classpath
                    java -jar lib/junit-platform-console-standalone-1.8.1.jar \
                    -cp target \
                    --scan-class-path
                '''
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Ici vous pouvez ajouter vos étapes de déploiement
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
